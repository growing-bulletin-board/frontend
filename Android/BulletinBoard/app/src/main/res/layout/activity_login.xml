<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".LoginActivity">
    
    <TextView
        android:id="@+id/tv_logo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="@string/main_logo_title"
        android:padding="@dimen/tv_logo_padding"
        android:layout_margin="@dimen/tv_logo_margin"
        android:textSize="@dimen/tv_logo_text_size"
        android:textStyle="bold"/>

    <Button
        android:id="@+id/btn_login"
        android:layout_width="match_parent"
        android:layout_height="@dimen/btn_login_height"
        android:layout_margin="@dimen/btn_login_margin"
        android:layout_below="@+id/tv_logo"
        android:text="@string/google_login_title"
        android:textColor="@color/white"
        android:background="@drawable/btn_google_login"
        />




</RelativeLayout>